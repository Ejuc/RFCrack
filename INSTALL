#This should work, though gave me issues in Kali where I had to use Root Env: 

sudo apt install python3-pip
sudo apt install python3-virtualenv

python3 -m venv env
source env/bin/activate

pip Install rfcat
pip install matplotlib
pip install bitstring
pip install libusb
pip install pyusb

rfcat -r

#Or on like Kali I had to do this to avoid Root Usage: 
sudo apt install python3-bitstring
sudo apt install python3-matplotlib
sudo apt-get install python libusb-1.0-0
sudo apt install python3-pyusb
sudo apt install python3-numpy
sudo apt install rfcat

rfcat -r

